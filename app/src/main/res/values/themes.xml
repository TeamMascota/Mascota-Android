<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mascota" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maco_orange</item>
        <item name="colorPrimaryVariant">@color/maco_orange</item>
        <item name="colorOnPrimary">@color/maco_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maco_orange</item>
        <item name="colorSecondaryVariant">@color/maco_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/maco_ivory</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CalendarRecordTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textColor">@color/maco_light_gray</item>
    </style>

    <style name="CalendarDayOfWeekTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/maco_dark_gray</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
    </style>

    <style name="TextBody1Style" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
    </style>

    <style name="TextBody2Style" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
    </style>

    <style name="TextBody2MediumStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_medium</item>
    </style>

    <style name="TextSub1Style" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_medium</item>
    </style>

    <style name="TextH1Style" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
    </style>

    <style name="TextH1MediumStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_medium</item>
    </style>

    <style name="MascotaButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_bold</item>
        <item name="android:textColor">@color/selector_btn_text</item>
        <item name="android:background">@drawable/selector_maco_btn</item>
    </style>

    <style name="MascotaDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/rectangle_fill_white_3</item>
    </style>

    <style name="SpinnerDivideStyle">
        <item name="android:divider">@color/maco_dark_gray</item> <!--구분선 색-->
        <item name="android:dividerHeight">1dp</item> <!-- 구분석 높이-->
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:spinnerStyle">@android:style/Widget.Spinner.DropDown</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--상단색 변경-->
        <item name="colorAccent">@color/maco_orange</item>
        <!--다이얼로그 배경 변경-->
        <item name="background">@color/maco_orange</item>
        <!--다이얼로그 배경 변경-->
        <item name="colorControlActivated">@color/maco_orange</item>
        <item name="colorControlHighlight">@color/maco_orange</item>
        <!--취소/확인 버튼 색상-->
        <item name="android:textColor">@color/maco_orange</item>

    </style>



</resources>