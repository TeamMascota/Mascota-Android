<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_farewell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangle_fill_white_border_gray_3"
            app:layout_constraintDimensionRatio="62:82"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_hero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_dog_angry" />

            <TextView
                android:id="@+id/tv_name"
                android:textSize="10sp"
                android:background="@drawable/selector_farewell_bottom_btn"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:textColor="@color/maco_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="21dp"
                android:paddingTop="1dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/cobong" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>