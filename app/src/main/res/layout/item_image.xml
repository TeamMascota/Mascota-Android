<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="image"
            type="org.mascota.ui.view.diary.data.ImageList" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@drawable/rectangle_fill_white_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/cl_img"
                app:layout_constraintEnd_toEndOf="@+id/cl_img"
                app:layout_constraintStart_toStartOf="@+id/cl_img"
                app:layout_constraintTop_toTopOf="@+id/cl_img" />

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="47dp"
                android:layout_marginVertical="40dp"
                android:src="@drawable/ic_before_img"
                app:layout_constraintBottom_toBottomOf="@+id/cl_img"
                app:layout_constraintEnd_toEndOf="@+id/cl_img"
                app:layout_constraintStart_toStartOf="@+id/cl_img"
                app:layout_constraintTop_toTopOf="@+id/cl_img" />


        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>