<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cl_custom_book">

        <View
            android:id="@+id/v_bg_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintDimensionRatio="343:213"
            android:background="@drawable/rectangle_orange_radius_3" />

        <View
            android:id="@+id/v_top_book"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/v_bg_book"
            app:layout_constraintStart_toStartOf="@id/v_bg_book"
            app:layout_constraintEnd_toEndOf="@id/v_bg_book"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintDimensionRatio="333:215"
            android:background="@drawable/rectangle_orange_radius_3" />

        <View
            android:id="@+id/v_mid_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/pure_orange"
            app:layout_constraintTop_toTopOf="@id/v_top_book"
            app:layout_constraintStart_toStartOf="@id/v_top_book"
            app:layout_constraintEnd_toEndOf="@id/v_top_book"
            app:layout_constraintBottom_toBottomOf="@id/v_bg_book" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_left_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/v_top_book"
            app:layout_constraintBottom_toBottomOf="@id/v_top_book"
            app:layout_constraintStart_toStartOf="@id/v_top_book"
            app:layout_constraintEnd_toStartOf="@id/v_mid_line" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_right_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/v_top_book"
            app:layout_constraintBottom_toBottomOf="@id/v_top_book"
            app:layout_constraintStart_toEndOf="@id/v_mid_line"
            app:layout_constraintEnd_toEndOf="@id/v_top_book" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>